hostname: kubernetes-storage
coreos:
  fleet:
    metadata: "region=main"
  units:
    - name: 10-ens3.network
      content: |
        [Match]
        MACAddress=00:16:3e:51:b5:82
        [Network]
        Address=172.16.30.9/24
        Gateway=172.16.30.1
        DNS=172.16.30.1
    - name: data.mount
      command: start
      content: |
        [Unit]
        Description=Mount Data to /data
        [Mount]
        What=/dev/vdb
        Where=/data
        Type=ext4
    - name: rpc-mountd.service
      command: start
    - name: nfsd.service
      command: start
write_files:
  - path: /etc/environment
    permissions: 0644
    content: |
      COREOS_PUBLIC_IPV4=172.16.30.9
      COREOS_PRIVATE_IPV4=172.16.30.9
  - path: /etc/exports
    permissions: 0644
    content: |
      /data/ 172.16.30.0/24(rw,async,no_subtree_check,no_root_squash,fsid=0) 172.16.50.0/24(rw,async,no_subtree_check,no_root_squash,fsid=0)
