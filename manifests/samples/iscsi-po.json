{
  "apiVersion": "v1",
  "kind": "Pod",
  "metadata": {
    "name": "iscsi-po"
  },
  "spec": {
    "containers": [
      {
        "name": "iscsipd-rw",
        "image": "kubernetes/pause",
        "volumeMounts": [
          {
            "mountPath": "/mnt/iscsipd",
            "name": "iscsipd-rw"
          }
        ]
      }
    ],
    "volumes": [
      {
        "name": "iscsipd-rw",
        "iscsi": {
          "targetPortal": "freenas.hm.benjamin-borbe.de:3260",
          "iqn": "iqn.freenas.hm.benjamin-borbe.de:testtarget",
          "lun": 0,
          "fsType": "ext4",
          "readOnly": false
        }
      }
    ]
  }
}
